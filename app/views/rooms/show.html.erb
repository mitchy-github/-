<div class="container room-show">
<div class="row">
  
  <div class="col-md-8">
         <% if @room.room_image.attached? %>
       <%= image_tag @room.room_image, class: "room-show-image" %>
       <% else %>
         <!--<= image_tag asset_path('icon_default_room_image.jpg'), size: '100' %>-->
       画像なし
       <% end %>
  <div class="room-show-detile">
  <a href="/">
        <figure class="image is-256x256">
      <%= image_tag avatar_url(current_user), class: "is-rounded" %>
    </figure>
    </a>
    </div>
    <div class="room-show-profile">
    <p class="room-show-profile-name">ルーム名：<%= @room.room_name %></p>
    <p class="room-show-profile-address">住所：<%= @room.room_address %></p>
    <!--</div>-->
    </div>
    <p class="room-show-detile-content">紹介：<%= @room.room_content %></p>
    </div>
    
    <div class="col-md-4">
      <div class="room-show-nav">
        
        
      <!--<= render "shared/error_messages", obj: @reservation %>-->
      <%= render "devise/shared/error_messages", resource: @reservation %>
      <h5 class="price-icon">
      ￥ <%= @room.room3_price %> / 日
      </h5>
      
      <div class="room-show-date-select">
        
        <%= form_with url: reservations_confirm_path, local: true do |f| %>
          <%= f.label :room_id, "部屋ID" %>
          <%= f.text_field :room_id, value:@room.id, class: "form-control mb-4" %>


          <%= f.label :reservation2_start, "開始日" %>
          <%= f.date_field :reservation2_start, class: "form-control mb-4" %>


          <%= f.label :reservation2_end, "終了日" %>
          <%= f.date_field :reservation2_end, class: "form-control mb-4" %>


          <%= f.label :reservation2_people, "人数" %>
          <%= f.number_field :reservation2_people, class: "form-control mb-4" %>


          <%= f.submit"予約する", class: "btn btn-primary form-control4" %>


        <% end %>
      </div>
    </div>
</div>
</div>
  </div>
</div>
    
    
    
