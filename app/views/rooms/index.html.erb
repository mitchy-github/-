<div class="container-fiuld room-posts">
  <h4 class="pb-4">登録済みルーム一覧</h4>
      <div class="column is-one-third has-text-centered">
        <%= link_to new_room_path do %>
          <strong>お部屋を新規登録する</strong>
        <% end %>
      </div>
  <table>
    <thead>
      <tr align="center">
        <th>id</th>
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>料金</th>
        <th>ルーム紹介</th>
        <th>作成日</th>
      </tr>
    </thead>
    <tbody>
      <% if @rooms.count > 0 %>
        <% @rooms.each do |room| %>
          <tr>
            <td class="room-posts-id">
              <%= room.id %>
            </td>
            <td class="room-posts-image">
              <% if room.room_image.attached? %>
                <%= image_tag room.room_image, size: '100' %>
              <% else %>
                画像なし
              <% end %>
            </td>
            <td class="posts-name"><%= link_to room.room_name, room %></td>
            <td class="price-icon">¥ <%= room.room3_price %></td>
            <td class="posts-content"><%= room.room_content %></td>
            <td><%= room.created_at.to_s(:datetime_jp) %></td>
        <% end %>
      <% else %>
        <td colspan="6">現在登録済みのお部屋は有りません</td>
      <% end %>
    </tbody>
  </table>
</div>