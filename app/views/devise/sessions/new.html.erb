<div class="container device">
  <div class="device_frame">
    <p class="my-4">ログイン</p>
    <div class="device_inner">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
            <%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class: "form-control col-10 px-2" %>
        </div>
        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
            <%= f.password_field :password, placeholder: "パスワード", autocomplete: "current-password", class: "form-control col-10 px-2" %>
        </div>
        <div class="actions">
          <%= f.submit "ログインする", class: "form-control btn-primary my-4" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>